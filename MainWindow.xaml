<Window x:Class="LibrarySystemforPortfolio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystemforPortfolio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- TextBlock to prompt the user -->
        <TextBlock Text="Select an option:" Margin="10" VerticalAlignment="Top" />

        <!-- RadioButton to choose adding an existing book -->
        <RadioButton Content="Add Existing Book" Name="rbExistingBook" Margin="10,40,0,0" VerticalAlignment="Top" />

        <!-- RadioButton to choose adding a new book -->
        <RadioButton Content="Add New Book" Name="rbNewBook" Margin="10,70,0,0" VerticalAlignment="Top" />

        <!-- Button to proceed based on the selected option -->
        <Button Content="Next" Click="NextButton_Click" Margin="10,100,0,0" VerticalAlignment="Top" />

        <!-- Additional controls specific to adding an existing book -->
        <TextBox Name="txtExistingBookId" ToolTip="Enter Book ID" Margin="10,130,0,0" VerticalAlignment="Top" Visibility="Collapsed" />

        <!-- Additional controls specific to adding a new book -->
        <TextBlock Name="lblTitle" Text="Title:" Margin="10,160,0,0" VerticalAlignment="Top" Visibility="Collapsed" />
        <TextBox Name="txtTitle" ToolTip="Enter Title" Margin="60,160,0,0" VerticalAlignment="Top" Visibility="Collapsed" />

        <TextBlock Name="lblAuthor" Text="Author:" Margin="10,190,0,0" VerticalAlignment="Top" Visibility="Collapsed" />
        <TextBox Name="txtAuthor" ToolTip="Enter Author" Margin="60,190,0,0" VerticalAlignment="Top" Visibility="Collapsed" />

        <TextBlock Name="lblISBN" Text="ISBN:" Margin="10,220,0,0" VerticalAlignment="Top" Visibility="Collapsed" />
        <TextBox Name="txtISBN" ToolTip="Enter ISBN" Margin="60,220,0,0" VerticalAlignment="Top" Visibility="Collapsed" />

        <TextBlock Name="lblPublisher" Text="Publisher:" Margin="10,250,0,0" VerticalAlignment="Top" Visibility="Collapsed" />
        <TextBox Name="txtPublisher" ToolTip="Enter Publisher" Margin="60,250,0,0" VerticalAlignment="Top" Visibility="Collapsed" />


        <Button Name="UpdateSystemButton" Content="Add Book to System" Click="UpdateDatabaseButton_Click" Margin="10,280,0,0" VerticalAlignment="Top" Visibility="Collapsed" />

        <!--<Grid.RowDefinitions>
